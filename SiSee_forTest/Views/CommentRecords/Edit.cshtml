@model SiSee_v1.Models.CommentRecord

@{
    ViewBag.Title = "我的評論 - 修改";
}

<h2>我的評論 - 修改</h2>

<p><a href="@Html.Encode(Request.UrlReferrer.ToString())" class="btn btn-warning">上一頁</a></p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.commentrecord_ID)
        @Html.HiddenFor(model => model.spot_ID)
        <div class="form-group">
            <label class="control-label col-md-2">景點：</label>
            <div class="col-md-10">
                <input type="text" class="form-control" value="@ViewData["SpotName"]" readonly/> 
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comment_date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.comment_date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.comment_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comment_grade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.comment_grade, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", max = "5" } })
                @Html.ValidationMessageFor(model => model.comment_grade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comment_context, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.comment_context, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comment_context, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="確定" class="btn btn-default" />
            </div>
        </div>
    </div>
}
