@model IEnumerable<SiSee_v1.Models.CommentRecord>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="responsive-table responsive-table-input-matrix">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.comment_context)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comment_grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comment_date)
        </th>
