@{
    Layout = null;
    ViewBag.Title = "Home";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/css/_layout.css" rel="stylesheet" />
    @Scripts.Render("~/Scripts/jquery.blockUI.js")
    @Scripts.Render("~/Scripts/fbapiconnect.js")
    @Scripts.Render("~/Scripts/Share.js")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#1D2038;">
    @Html.Partial("_Navbar")
    <div>
        <div style="float:left; width:auto !important;">
            <br />
            <div style="text-align:center; height:250px; color:white; background-color :#1D2038; ">
                <p style="font-size:70px; font-family:Georgia; ">SiSee</p>
                <p style="font-size:30px; font-family:Iskoola Pota ;">Have Own Sight</p>
                <br />
                <hr style="width:60%;" />
            </div>
            <div style="height:122px; background-color:#1D2038; text-align:center; margin-left:60px;">
                @using (Html.BeginForm("Index", "Spots", FormMethod.Post, new { @id = "SearchForm" }))
                {
                    <div class="label ">
                        <input name="id" type="text" class="SearchText text text-info btn btn-default form-control" style="width:70%;height:70px; margin: 0 auto; font-size:32pt;" />
                        <a onclick="document.getElementById('SearchForm').submit()">
                            <span class="SearchHomeButton btn glyphicon glyphicon-search" style=" font-size: 40px; color:white; height:100%"></span>
                        </a>
                    </div>
                }
                @*<span><input class="btn btn-default form-control " style=" width:70%;height:50%; margin: 0 auto; font-size:larger;" /></span>
                    <span class="glyphicon glyphicon-search" style=" font-size: 30px; color:white; padding:20px;">  </span>*@
            </div>
            <div style="text-align:center; height:150px; color:white; background-color :#1D2038; ">
                <p style="font-size:20px; font-family:Iskoola Pota ;">click to search your sight</p>
            </div>
        </div>
        <div style="float:left;">
            <br />
            <img class="HomeImg04" src="~/Content/img/home04.png" />
        </div>
    </div>
</body>
</html>