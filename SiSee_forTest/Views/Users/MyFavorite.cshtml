@model IEnumerable<SiSee_v1.Models.FavoriteRecord>
@Scripts.Render("~/Scripts/MyFavorite.js")

@{
    ViewBag.Title = "我的收藏";
}

<h2>我的收藏</h2>

@Html.ActionLink("上一頁", "Details", new { id = User.Identity.Name })

<p class="text-info">=== @ViewData["SpotCount"] === </p>

<table class="table table-condensed table-striped ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Spot.spot_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(Html.DisplayFor(modelItem => item.Spot.spot_name).ToString(), "Details", "Spots", new { id = item.spot_ID }, null)
            </td> 
            <td>
                @Html.ActionLink("取消收藏", "CancelFavoriteRecord", "Users", new { id = item.searchrecord_ID }, new { @class = "text-danger CancelFavoriteRecord CancelFavoriteRecordButton" })
            </td>
        </tr>
    }
</table>

